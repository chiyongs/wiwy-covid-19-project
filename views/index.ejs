<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"
      integrity="sha512-hZf9Qhp3rlDJBvAKvmiG+goaaKRZA6LKUO35oK6EsM0/kjPK32Yw7URqrq3Q+Nvbbt8Usss+IekL7CRn83dYmw=="
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="stylesheet" href="/stylesheets/home.css" />
  </head>
  <body>
    <% include ../views/header %>
    <div class="main-section" width="100%" height="300%">
      <% include ../views/navbar %>
    </div>
    <div class="section">
      <input type="radio" name="slide" id="slide01" checked />
      <input type="radio" name="slide" id="slide02" />
      <input type="radio" name="slide" id="slide03" />
      <div class="slidewrap">
        <ul class="slidelist">
          <li class="slideitem">
            <a>
              <img src="./images/1.jpg" width="5000px" height="300px" />
            </a>
          </li>
          <li class="slideitem">
            <a>
              <img src="./images/2.jpg" width="5000px" height="300px" />
            </a>
          </li>
          <li class="slideitem">
            <a>
              <img src="./images/3.jpg" width="5000px" height="300px" />
            </a>
          </li>

          <!-- 좌,우 슬라이드 버튼 -->
          <div class="slide-control">
            <div>
              <label for="slide03" class="left"></label>
              <label for="slide02" class="right"></label>
            </div>
            <div>
              <label for="slide01" class="left"></label>
              <label for="slide03" class="right"></label>
            </div>
            <div>
              <label for="slide02" class="left"></label>
              <label for="slide01" class="right"></label>
            </div>
          </div>
        </ul>
        <!-- 페이징 -->
        <ul class="slide-pagelist">
          <li><label for="slide01"></label></li>
          <li><label for="slide02"></label></li>
          <li><label for="slide03"></label></li>
        </ul>
      </div>
    </div>
    <div class="youtube-section">
      <iframe
        class="youtube"
        width="560"
        height="315"
        src="https://www.youtube.com/embed/ZFUnG41xJOY?enablejsapi=1&origin=http://localhost:3000"
        frameborder="0"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
        allowfullscreen
      ></iframe>

      <div class="text">
        <img src="/images/text.png" width="300px" />
        <button type="button" class="plusbtn">
          <a href="/page/main">
            <img src="./images/btn.jpg" width="100%" height="100%" />
          </a>
        </button>
      </div>
    </div>
    <div class="text-section">
      <img src="/images/text1.png" width="200px" height="300px" />
      <img src="/images/text2.png" width="210px" height="300px" />
      <img src="/images/text3.png" width="210px" height="300px" />
    </div>
    <img src="/images/chatbot.png" id="chatbotimg" width="20px" height="20px" />
    <% include ../views/footer %>
  </body>
</html>
