#!/usr/bin/env node

/**
 * Module dependencies.
 */
const schedule = require("node-schedule");
const update_info = require("../conf/update_info");
var app = require("../app");
var debug = require("debug")("wiwy-covid19-project:server");
var http = require("http");
const updateData = require("../conf/updateData");
let moment = require("moment");
let curDate = moment().format("YYYYMMDD");
let logger = require("../conf/winston");

/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || "3000");
app.set("port", port);

/**
 * Create HTTP server.
 */

var server = http.createServer(app);

/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port);
server.on("error", onError);
server.on("listening", onListening);
console.log(update_info.isUpdate);

const fetchData = schedule.scheduleJob("0 0 */1 * * *", () => {
  if (!update_info.isUpdate) {
    updateData(curDate, (key) => {
      if (key == 1) {
        update_info.didUpdate();
        logger.info("Updating complete");
      } else {
        update_info.clrUpdate();
      }
    });
    console.log(update_info.isUpdate);
  } else {
    update_info.didUpdate();
    logger.info("Did already");
  }
});

const refreshUpdate = schedule.scheduleJob("0 5 0 * * *", () => {
  update_info.clrUpdate();
});
/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== "listen") {
    throw error;
  }

  var bind = typeof port === "string" ? "Pipe " + port : "Port " + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case "EACCES":
      console.error(bind + " requires elevated privileges");
      process.exit(1);
      break;
    case "EADDRINUSE":
      console.error(bind + " is already in use");
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === "string" ? "pipe " + addr : "port " + addr.port;
  debug("Listening on " + bind);
}
